import java.util.Scanner;
public class Training {
	public static void main(String[] args) {
		float hours;
	Scanner sc=new Scanner(System.in);
	   System.out.println("Input the time taken by worker: ");
	   hours = sc.nextFloat();
//System.out.print("Input the time taken by worker: ");
		if(hours >= 2 && hours <= 3) {
			System.out.print("Worker is highly efficient");
		}
		if(hours > 3 && hours <= 4) {
			System.out.print("Worker needs to improve speed");
		}
		if(hours > 4 && hours <= 5) {
			System.out.print("Give training to worker");
		}
		if(hours > 5) {
			System.out.print("Worker is terminated");
		}
	}
}
